<Window x:Class="EFPeopleAgain.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EFPeopleAgain"
        mc:Ignorable="d"
        Title="MainWindow" Height="370" Width="555" Background="#ccc9">
  <Grid>
    <ListBox Name="lbPeople" HorizontalAlignment="Left" Height="301" Margin="10,10,0,0" VerticalAlignment="Top" Width="281" />
    <Label Content="Id:" HorizontalAlignment="Left" Margin="314,24,0,0" VerticalAlignment="Top" />
    <Label Content="Name:" HorizontalAlignment="Left" Margin="314,67,0,0" VerticalAlignment="Top" />
    <Label Content="Age:" HorizontalAlignment="Left" Margin="314,112,0,0" VerticalAlignment="Top" />
    <Label Name="lblId" Content="..." HorizontalAlignment="Left" Margin="365,24,0,0" VerticalAlignment="Top" />
    <TextBox Name="tbName" HorizontalAlignment="Left" Height="23" Margin="365,69,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="144" />
    <TextBox Name="tbAge" HorizontalAlignment="Left" Height="23" Margin="365,112,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="144" />
    <Button Name="btnAdd"  Content="Add" HorizontalAlignment="Left" Margin="314,207,0,0" VerticalAlignment="Top" Width="75" />
    <Button Name="btnUpdate" Content="Update" HorizontalAlignment="Left" Margin="434,207,0,0" VerticalAlignment="Top" Width="75" />
    <Slider x:Name="slHeight" HorizontalAlignment="Left" Margin="365,151,0,0" VerticalAlignment="Top" Width="144" Minimum="30" Maximum="300" TickFrequency="20" TickPlacement="Both" Height="38" />
    <Label x:Name="label" Content="Height:" HorizontalAlignment="Left" Margin="314,151,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.021,-0.01" />
  </Grid>
</Window>
